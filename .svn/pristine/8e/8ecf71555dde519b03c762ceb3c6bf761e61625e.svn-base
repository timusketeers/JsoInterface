package com.howbuy.jso.service.network;

import com.howbuy.jso.service.network.receiver.ResponseReceiver;
import com.howbuy.jso.service.network.sender.RequestDispatcher;

/**
 * 消息收发器
 * @author li.zhang
 * 2014-9-18
 *
 */
public class Transceiver
{
    /** 消息发送者. **/
    private RequestDispatcher sender;
    
    /** 消息接收者. **/
    private ResponseReceiver receiver;
    
    /**
     * 发送消息.
     * @param args
     */
    public void sendMessage(String... args)
    {
        sender.sendMessage(args);
    }
    

    public RequestDispatcher getSender()
    {
        return sender;
    }

    public ResponseReceiver getReceiver()
    {
        return receiver;
    }
}
