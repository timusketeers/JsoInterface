package com.howbuy.jso.service.queue;

import java.nio.ByteBuffer;
import java.util.Vector;

/**
 * 队列.
 * @author li.zhang
 * 2014-9-23
 *
 */
public class NioQueue
{
    /** 队列. **/
    private Vector<ByteBuffer> queue = new Vector<ByteBuffer>();
    
    /**
     * 入队列.
     * @param buffer
     */
    public void offer(ByteBuffer buffer)
    {
        queue.add(buffer);
    }
    
    /**
     * 从队列中拉出.
     * @return
     */
    public ByteBuffer poll()
    {
        return queue.remove(0);
    }
    
    /**
     * 获取队列最前端的元素.但不出队.
     * @return
     */
    public ByteBuffer peek()
    {
        return queue.get(0);
    }
    
    /**
     * 判断队列是否为空.
     * @return
     */
    public boolean isEmpty()
    {
        return queue.isEmpty();
    }
    
    /**
     * 清空队列
     */
    public void clear()
    {
        queue.clear();
    }
}
